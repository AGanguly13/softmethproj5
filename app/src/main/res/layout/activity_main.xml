<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="56dp">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/rcViewMain"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>
        <Button
                android:text="@string/store_orders"
                android:layout_width="123dp"
                android:layout_height="91dp" android:id="@+id/storeOrderButton"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toBottomOf="@+id/rcViewMain"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
                app:layout_constraintEnd_toStartOf="@+id/currentOrderButton" android:layout_marginEnd="60dp"/>
        <Button
                android:text="@string/current_orders"
                android:layout_width="135dp"
                android:layout_height="97dp" android:id="@+id/currentOrderButton"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toBottomOf="@+id/rcViewMain"
                app:layout_constraintStart_toEndOf="@+id/storeOrderButton"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>