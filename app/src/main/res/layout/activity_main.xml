<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcViewMain"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="117dp"/>
    <Button
            android:text="@string/current_orders"
            android:layout_width="135dp"
            android:layout_height="97dp" android:id="@+id/currentOrderButton"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/rcViewMain" android:layout_marginEnd="46dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/store_orders"
            android:layout_width="123dp"
            android:layout_height="91dp" android:id="@+id/storeOrderButton"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/rcViewMain"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>